<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9"
    tools:context=".ui.my_center.MyCenterFragmentMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/UserName_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/center_title"
                android:textSize="28sp"
                android:fontFamily="sans-serif-light"
                android:textColor="#37474F"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="40dp"/>

            <!-- Section: Pictures -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_my_pictures"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#37474F"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="32dp"
                tools:listitem="@android:layout/simple_list_item_1" />


            <!-- Section: Songs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_my_songs"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#37474F"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="32dp"
                tools:listitem="@android:layout/simple_list_item_1" />


            <!-- Section: Quotes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_my_quotes"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#37474F"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="80dp"
                tools:listitem="@android:layout/simple_list_item_1" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/plus"
        app:tint="#263238"
        app:backgroundTint="#E0F2F1"
        app:elevation="4dp"
        android:contentDescription="@string/desc_add_new"/>

</FrameLayout>
