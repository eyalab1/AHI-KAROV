<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient"
    tools:context=".peaceofmind.PeaceOfMindFragment">

    <!-- שכבה נוספת מאחור ליצירת עומק/הילה -->
    <View
        android:id="@+id/auraView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/bg_breathing_box"
        android:alpha="0.3"
        app:layout_constraintBottom_toBottomOf="@id/breathingBox"
        app:layout_constraintEnd_toEndOf="@id/breathingBox"
        app:layout_constraintStart_toStartOf="@id/breathingBox"
        app:layout_constraintTop_toTopOf="@id/breathingBox" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="רגע של שקט"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#37474F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#37474F"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvCycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מחזור 0"
        android:textSize="14sp"
        android:alpha="0.6"
        android:textColor="#37474F"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/breathingBox"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_breathing_box"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBreathStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מוכן?"
        android:textSize="24sp"
        android:textColor="#455A64"
        app:layout_constraintBottom_toBottomOf="@id/breathingBox"
        app:layout_constraintEnd_toEndOf="@id/breathingBox"
        app:layout_constraintStart_toStartOf="@id/breathingBox"
        app:layout_constraintTop_toTopOf="@id/breathingBox" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/start_practice"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:backgroundTint="#00796B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>