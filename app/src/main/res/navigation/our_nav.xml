<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/our_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.first.ahikarov.MainFragment"
        android:label="Main Menu"
        tools:layout="@layout/main_layout">

        <action
            android:id="@+id/action_main_to_center_main"
            app:destination="@id/myCenterFragmentMain" />

        <action
            android:id="@+id/action_main_to_sos"
            app:destination="@id/sosAndSupportFragment" />
        <action
            android:id="@+id/action_main_to_emotionJournal"
            app:destination="@id/emotionJournalFragment" />
    </fragment>

    <fragment
        android:id="@+id/myCenterFragmentMain"
        android:name="com.first.ahikarov.MyCenterFragmentMain"
        android:label="My Center Main"
        tools:layout="@layout/my_center_main_layout">

        <action
            android:id="@+id/action_center_main_to_add"
            app:destination="@id/myCenterFragment" />
        <action
            android:id="@+id/action_myCenterFragmentMain_to_detailItemFragment"
            app:destination="@id/detailItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/myCenterFragment"
        android:name="com.first.ahikarov.MyCenterFragment"
        android:label="Add New Item"
        tools:layout="@layout/my_center_layout" />

    <fragment
        android:id="@+id/sosAndSupportFragment"
        android:name="com.first.ahikarov.SosAndSupportFragment"
        android:label="SOS and Support"
        tools:layout="@layout/sos_and_support_layout" />
    <fragment
        android:id="@+id/detailItemFragment"
        android:name="com.first.ahikarov.DetailItemFragment"
        android:label="DetailItemFragment" >
        <action
            android:id="@+id/action_detailItemFragment_to_myCenterFragment"
            app:destination="@id/myCenterFragment" />
    </fragment>

    <fragment
        android:id="@+id/emotionJournalFragment"
        android:name="com.first.ahikarov.EmotionJournalFragment"
        android:label="Emotion Journal"
        tools:layout="@layout/emotion_journal_layout">

        <action
            android:id="@+id/action_journal_to_add"
            app:destination="@id/addEmotionFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEmotionFragment"
        android:name="com.first.ahikarov.AddEmotionFragment"
        android:label="Add Emotion"
        tools:layout="@layout/add_journal_layout" />

</navigation>